<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTieu">

    <EditText
        android:id="@+id/editDanhMuc"
        android:layout_width="155dp"
        android:layout_height="57dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Danh muc"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ediMota"
        android:layout_width="186dp"
        android:layout_height="56dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Mo ta"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/editDanhMuc"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="79dp"
        android:layout_marginTop="36dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editGiaTien" />

    <EditText
        android:id="@+id/editGiaTien"
        android:layout_width="154dp"
        android:layout_height="54dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Gia tien"
        android:inputType="phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editDanhMuc" />

    <ListView
        android:id="@+id/lvChiTieu"
        android:layout_width="425dp"
        android:layout_height="481dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="22dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toEndOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="177dp"
        android:layout_height="50dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="date"
        android:hint="Date"
        app:layout_constraintStart_toEndOf="@+id/editGiaTien"
        app:layout_constraintTop_toBottomOf="@+id/ediMota" />

</androidx.constraintlayout.widget.ConstraintLayout>